<div class="containers">
  <div id="login-box">
    <div class="logo">
      <img
        src="./images/logo white.png"
        class="img img-responsive img-circle center-block w-25"
      />
      <h1 class="logo-caption"><span class="tweak">L</span>ogin</h1>
    </div><!-- /.logo -->
    <div class="controls">
      <form action="/login" method="post"  class="login">
        <input
          type="email"
          name="login"
          placeholder="Username"
          class="form-login"
          min="8"
          required
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          class="form-login "
          min="8"
          required

        />
        <button
          type="submit"
          class="btn btn-default form-login btn-custom"
        >Login</button>
      </form>
     
  </div>
</div>
<div id="particles-js"></div>
